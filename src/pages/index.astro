---
// Component Imports
import "the-new-css-reset/css/reset.css";
import "@fontsource/m-plus-rounded-1c";

import TopPage from "../components/TopPage.astro";
import Page from "../components/util/Page.astro";
import LinkList from "../components/ExternalLinks.astro";
import Profile from "../components/Profile.astro";
import ogInfo from "../og_info.json";

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<style is:global>
  body {
    font-family: "M PLUS Rounded 1c", sans-serif;
  }
  a {
    color: rgba(0, 44, 99, 0.66);
  }
  a:hover {
    text-decoration: underline;
  }
</style>

<html lang="ja">
  <head>
    <title>{ogInfo.site_name}</title>
    <meta name="description" content={ogInfo.description} />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={ogInfo.site_name} />
    <meta property="og:url" content={ogInfo.url} />
    <meta property="og:description" content={ogInfo.description} />
    <meta property="og:type" content={ogInfo.type} />
    <meta property="og:site_name" content={ogInfo.site_name} />
    <meta property="og:locale" content={ogInfo.locale} />
    <link rel="icon" type="image/vnd.microsoft.icon" href="/favicon.ico" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
      integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <main>
      <TopPage />
      <Page backgroundColor="#17a05d" title="Profile">
        <Profile
          idols={[
            {
              name: "秋月 律子",
              href: "https://idollist.idolmaster-official.jp/detail/10001",
            },
            {
              name: "荒木 比奈",
              href: "https://idollist.idolmaster-official.jp/detail/20012",
            },
            {
              name: "上条 春菜",
              href: "https://idollist.idolmaster-official.jp/detail/20041",
            },
            {
              name: "上水流 宇宙",
              href: "https://idolmaster-official.jp/va-liv/cosmo",
            },
            {
              name: "鷹富士 茄子",
              href: "https://idollist.idolmaster-official.jp/detail/20100",
            },
            {
              name: "久川 颯",
              href: "https://idollist.idolmaster-official.jp/detail/20132",
            },
            {
              name: "黛 冬優子",
              href: "https://idollist.idolmaster-official.jp/detail/50020",
            },
            {
              name: "三峰 結華",
              href: "https://idollist.idolmaster-official.jp/detail/50021",
            },
          ]}
        />
      </Page>
      <Page backgroundColor="#3b89b9" title="Links">
        <LinkList
          links={[
            {
              name: "Twitter",
              icon: "fa-brands fa-twitter",
              href: "https://twitter.com/fusagiko",
            },
            {
              name: "GitHub",
              icon: "fa-brands fa-github",
              href: "https://github.com/takayamaki",
            },
            {
              name: "Mastodon",
              icon: "fa-brands fa-mastodon",
              href: "https://imastodon.net/@fusagiko",
            },
            {
              name: "Bluesky",
              icon: "fa-solid fa-cloud",
              href: "https://bsky.app/profile/fusagiko.jp",
            },
            {
              name: "Blog",
              icon: "fa-solid fa-edit",
              href: "https://fusagiko.hatenablog.jp/",
            },
            {
              name: "Mixcloud",
              icon: "fa-solid fa-compact-disc",
              href: "https://mixcloud.com/fusagiko/",
            },
          ]}
        />
      </Page>
    </main>
  </body>
</html>
